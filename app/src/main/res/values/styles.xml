<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Full Screen Dialog Theme -->
    <style name="Theme.Campus.Dialog.FullScreen" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <!-- Dialog Animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <!-- Custom Font Styles for Add Announcement Dialog -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:fontFamily">@font/jakarta_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InputHintStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/jakarta_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HelperTextStyle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/jakarta_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Rich Text Editor Button Styles -->
    <style name="RichEditorButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="backgroundTint">@color/rich_editor_button_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RichEditorTextButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/jakarta_bold</item>
        <item name="backgroundTint">@color/rich_editor_button_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
