<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_surfaceContainerLowest">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_inverseOnSurface"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@color/md_theme_inverseSurface"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outbox"
                android:textColor="@color/md_theme_inverseSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/jakarta_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your sent suggestions"
                android:textColor="@color/md_theme_inverseSurface"
                android:textSize="14sp"
                android:alpha="0.8"
                android:fontFamily="@font/jakarta_regular"/>
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_send"
            app:tint="@color/md_theme_inverseSurface"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Optional staff info -->
    <TextView
        android:id="@+id/tv_staff_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_primary"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:visibility="gone"/>

    <!-- Conversations List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_conversations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_send"
            android:alpha="0.3"
            android:contentDescription="No sent messages" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No sent suggestions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:fontFamily="@font/jakarta_semibold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your sent suggestions will appear here"
            android:textSize="14sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:fontFamily="@font/jakarta_regular"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>
