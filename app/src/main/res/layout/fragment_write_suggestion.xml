<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surfaceContainerLowest">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_inverseOnSurface"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back arrow -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@color/md_theme_inverseSurface"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Department info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Department"
                android:textColor="@color/md_theme_inverseSurface"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/jakarta_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write your suggestion"
                android:textColor="@color/md_theme_inverseSurface"
                android:textSize="14sp"
                android:alpha="0.8"
                android:fontFamily="@font/jakarta_regular"/>
        </LinearLayout>

        <!-- Department icon -->
        <ImageView
            android:id="@+id/iv_department_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_health"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/health_bg"
            app:tint="@color/health_icon"
            android:padding="10dp"/>

    </LinearLayout>

    <!-- Messages Area (Empty for new conversation) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header"
        app:layout_constraintBottom_toTopOf="@id/input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header"
        app:layout_constraintBottom_toTopOf="@id/input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_empty_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_health"
            android:alpha="0.3"
            android:contentDescription="Department icon" />

        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your suggestion"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:fontFamily="@font/jakarta_semibold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_empty_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write your message to the Health Department below"
            android:textSize="14sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:fontFamily="@font/jakarta_regular"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Input Container -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/md_theme_surfaceContainerLowest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- WhatsApp-like input box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Attachment Button -->
            <ImageView
                android:id="@+id/btn_attach"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_attach_file"
                android:contentDescription="Attach file"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/md_theme_onSurfaceVariant" />

            <!-- Message Input -->
            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/transparent"
                android:hint="Type your suggestion..."
                android:textColorHint="@color/md_theme_onSurfaceVariant"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="16sp"
                android:fontFamily="@font/jakarta_regular"
                android:maxLines="4"
                android:minLines="1"
                android:scrollbars="vertical"
                android:inputType="textMultiLine|textCapSentences"
                android:imeOptions="actionSend"
                android:paddingVertical="8dp" />

            <!-- Send Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/md_theme_primary">

                <ImageView
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_send"
                    android:padding="8dp"
                    android:contentDescription="Send suggestion"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:enabled="false"
                    app:tint="@color/md_theme_onPrimary" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Attachment Preview (when file selected) -->
        <LinearLayout
            android:id="@+id/attachment_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/md_theme_surface"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_attachment"
                app:tint="@color/md_theme_onSurfaceVariant"/>

            <TextView
                android:id="@+id/tv_attachment_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="document.pdf"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/btn_remove_attachment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:contentDescription="Remove attachment"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/md_theme_onSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Progress indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
