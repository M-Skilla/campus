<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_theme_background_highContrast"
        tools:context=".SettingsActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="4dp"
            android:background="@color/md_theme_background_highContrast"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settings_back_arrow"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/left_arrow_icon"
                    app:iconSize="24dp"
                    app:iconTint="?attr/colorOnSurface"
                    android:contentDescription="Back" />

                <TextView
                    android:id="@+id/settings_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/jakarta_bold"
                    android:textColor="?attr/colorOnSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/settings_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/settings_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/header_account_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_settings"
                    android:textStyle="bold"
                    android:fontFamily="@font/jakarta_bold"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_account_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:id="@+id/item_change_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jakarta_regular"
                                android:text="@string/change_password"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />
                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                app:tint="?attr/colorOnSurface"
                                android:src="@drawable/chevron_right_icon"
                                android:contentDescription="@string/change_password" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/header_app_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_preferences"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/jakarta_bold"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_app_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:id="@+id/item_theme_appearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jakarta_regular"
                                android:text="@string/theme_appearance"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />
                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                app:tint="?attr/colorOnSurface"
                                android:src="@drawable/chevron_right_icon"
                                android:contentDescription="@string/theme_appearance" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@drawable/gradient_separator"  />
                        <LinearLayout
                            android:id="@+id/item_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jakarta_regular"
                                android:text="@string/language"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/english"
                                android:textSize="16sp"
                                android:fontFamily="@font/jakarta_italic"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginEnd="8dp"/>
                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                app:tint="?attr/colorOnSurface"
                                android:src="@drawable/chevron_right_icon"
                                android:contentDescription="@string/language" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/header_notification_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_settings"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/jakarta_bold"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_notification_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:id="@+id/item_master_toggle_notifications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jakarta_regular"
                                android:text="@string/enable_disable_notifications"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_master_notifications"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@drawable/gradient_separator"  />
                        <LinearLayout
                            android:id="@+id/item_new_announcements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/new_announcements"
                                android:textSize="16sp"
                                android:fontFamily="@font/jakarta_regular"
                                android:textColor="?attr/colorOnSurface" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_new_announcements"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@drawable/gradient_separator"  />
                        <LinearLayout
                            android:id="@+id/item_event_reminders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/event_reminders"
                                android:textSize="16sp"
                                android:fontFamily="@font/jakarta_regular"
                                android:textColor="?attr/colorOnSurface" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_event_reminders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@drawable/gradient_separator"  />
                        <LinearLayout
                            android:id="@+id/item_new_event_postings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jakarta_regular"
                                android:text="@string/new_event_postings"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_new_event_postings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@drawable/gradient_separator"  />
                        <LinearLayout
                            android:id="@+id/item_suggestion_updates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jakarta_regular"
                                android:text="@string/suggestion_updates"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_suggestion_updates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/header_privacy_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_settings"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/jakarta_bold"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_privacy_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:id="@+id/item_anonymous_submissions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/jakarta_regular"
                                android:text="@string/anonymous_submissions"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurface" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_anonymous_submissions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/header_about_legal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/about_legal"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/jakarta_bold"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_about_legal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:id="@+id/item_app_version"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/app_version"
                                android:textSize="16sp"
                                android:fontFamily="@font/jakarta_regular"
                                android:textColor="?attr/colorOnSurface" />
                            <TextView
                                android:id="@+id/text_app_version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/version_1_0_0"
                                android:textSize="16sp"
                                android:fontFamily="@font/jakarta_regular"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>