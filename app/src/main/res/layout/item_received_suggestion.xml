<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/md_theme_surfaceContainer"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/md_theme_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="NEW"
                android:textColor="@color/md_theme_onPrimary"
                android:textSize="10sp"
                android:fontFamily="@font/jakarta_bold"
                tools:text="NEW" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Student Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatar_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/md_theme_primaryContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_student_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/md_theme_onPrimaryContainer"
                android:textSize="14sp"
                android:fontFamily="@font/jakarta_bold"
                tools:text="JD" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Student Info -->
        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="16sp"
            android:fontFamily="@font/jakarta_bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/avatar_container"
            app:layout_constraintStart_toEndOf="@id/avatar_container"
            app:layout_constraintEnd_toStartOf="@id/status_badge"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/tv_student_reg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            android:fontFamily="@font/jakarta_medium"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_student_name"
            app:layout_constraintStart_toEndOf="@id/avatar_container"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="CS/2023/001" />

        <!-- Suggestion Content -->
        <TextView
            android:id="@+id/tv_suggestion_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="14sp"
            android:fontFamily="@font/jakarta_regular"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/avatar_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="I would like to suggest implementing a new online portal for students to access their academic records more easily. The current system is quite outdated and difficult to navigate." />

        <!-- Attachment Indicator -->
        <LinearLayout
            android:id="@+id/attachment_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_suggestion_text"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_attach_file"
                app:tint="@color/md_theme_primary" />

            <TextView
                android:id="@+id/tv_attachment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/md_theme_primary"
                android:textSize="12sp"
                android:fontFamily="@font/jakarta_medium"
                tools:text="document.pdf" />
        </LinearLayout>

        <!-- Bottom Row: Timestamp and Actions -->
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="12sp"
            android:fontFamily="@font/jakarta_regular"
            app:layout_constraintTop_toBottomOf="@id/attachment_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="2 hours ago" />

        <!-- Priority Badge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/priority_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/md_theme_errorContainer"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/attachment_indicator"
            app:layout_constraintEnd_toStartOf="@id/btn_reply"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="@string/urgent"
                android:textColor="@color/md_theme_onErrorContainer"
                android:textSize="10sp"
                android:fontFamily="@font/jakarta_bold" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reply"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/reply"
            android:textSize="12sp"
            android:fontFamily="@font/jakarta_semibold"
            style="@style/Widget.Material3.Button"
            app:cornerRadius="18dp"
            app:layout_constraintTop_toBottomOf="@id/attachment_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
