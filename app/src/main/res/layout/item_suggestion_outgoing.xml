<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="end">

    <!-- Spacer to push content right -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <!-- Message Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxWidth="280dp"
        android:orientation="vertical">

        <!-- Message Bubble -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/bubbleOutgoing">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:minWidth="48dp">

                <!-- Attachment first -->
                <ImageView
                    android:id="@+id/ivAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    android:contentDescription="@string/attachment_preview"
                    tools:visibility="visible"
                    tools:src="@android:drawable/ic_menu_gallery" />

                <!-- Message below attachment -->
                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"
                    tools:text="Outgoing message below the attachment." />

                <!-- Timestamp and Status -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textPrimary"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        tools:text="2:34 PM" />

                    <!-- Status Icon (sent/delivered/read) -->
                    <ImageView
                        android:id="@+id/ivStatus"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_check"
                        android:contentDescription="@string/message_status"
                        app:tint="@color/textPrimary"
                        android:alpha="0.8" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
