<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_nav"
    android:elevation="10dp"
    android:padding="15dp"
    android:layout_marginBottom="12dp">

    <!-- News Item -->
    <LinearLayout
        android:id="@+id/news_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/bg_item_nav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/suggestions_item" >

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_announcements"
            app:tint="@color/md_theme_inverseSurface"
            tools:contentDescription="null" />

        <TextView
            android:id="@+id/tvNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="11sp"
            android:fontFamily="@font/jakarta_semibold"
            android:maxLines="1"
            android:text="@string/news"
            android:textColor="@color/md_theme_inverseSurface" />
    </LinearLayout>

    <!-- Suggestions Item -->
    <LinearLayout
        android:id="@+id/suggestions_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news_item"
        app:layout_constraintEnd_toStartOf="@+id/calendar_item">

        <ImageView
            android:id="@+id/suggestionImage"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_suggestion"
            app:tint="@color/md_theme_inverseSurface"
            tools:contentDescription="null" />

        <TextView
            android:id="@+id/tvSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/jakarta_semibold"
            android:maxLines="1"
            android:textSize="11sp"
            android:text="@string/inputs"
            android:textColor="@color/md_theme_inverseSurface"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Calendar Item -->
    <LinearLayout
        android:id="@+id/calendar_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/suggestions_item"
        app:layout_constraintEnd_toStartOf="@+id/profile_item">

        <ImageView
            android:id="@+id/calendarImage"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/md_theme_inverseSurface"
            tools:contentDescription="null" />

        <TextView
            android:id="@+id/tvCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/jakarta_semibold"
            android:textSize="11sp"
            android:maxLines="1"
            android:text="@string/events"
            android:textColor="@color/md_theme_inverseSurface"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Profile Item -->
    <LinearLayout
        android:id="@+id/profile_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calendar_item"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/md_theme_inverseSurface"
            tools:contentDescription="null" />

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/jakarta_semibold"
            android:textSize="11sp"
            android:maxLines="1"
            android:text="@string/profile"
            android:textColor="@color/md_theme_inverseSurface"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
