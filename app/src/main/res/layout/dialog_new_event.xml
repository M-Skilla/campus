<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res/auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background_highContrast">

    <!-- Header with Cancel, Title, and Done -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/md_theme_background_highContrast">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/md_theme_primary"
            android:textSize="16sp"
            android:fontFamily="@font/jakarta_regular"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New event"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="18sp"
            android:fontFamily="@font/jakarta_bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:textSize="16sp"
            android:fontFamily="@font/jakarta_regular"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Event Type Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_event_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event"
                    android:checked="true"
                    android:fontFamily="@font/jakarta_regular"
                    style="@style/Widget.MaterialComponents.Chip.Choice" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminder"
                    android:fontFamily="@font/jakarta_regular"
                    style="@style/Widget.MaterialComponents.Chip.Choice" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Title Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:textColor="@color/md_theme_onSurface"
                    android:textColorHint="@color/md_theme_onSurfaceVariant"
                    android:fontFamily="@font/jakarta_regular"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- All Day Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/md_theme_surfaceVariant"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All day"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_all_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

            </LinearLayout>

            <!-- Start Date/Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/md_theme_surfaceVariant"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/layout_start_date">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular" />

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="August 20, 2025"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:30"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- End Date/Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/md_theme_surfaceVariant"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/layout_end_date">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="End"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="August 20, 2025"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:30"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Location Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:textColor="@color/md_theme_onSurface"
                    android:textColorHint="@color/md_theme_onSurfaceVariant"
                    android:fontFamily="@font/jakarta_regular"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Calendar Type Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_calendar_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Calendar Type"
                    android:textColor="@color/md_theme_onSurface"
                    android:textColorHint="@color/md_theme_onSurfaceVariant"
                    android:fontFamily="@font/jakarta_regular"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sound Alert Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@color/md_theme_surfaceVariant"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sound Alert"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/jakarta_regular" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_sound_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
