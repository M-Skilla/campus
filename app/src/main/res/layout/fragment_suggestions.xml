<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBackgroundStart"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/textPrimary"
        app:title="@string/suggestions_title"
        app:titleTextColor="@color/textPrimary" />

    <!-- Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSuggestions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/inputBottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_suggestion_outgoing" />

    <!-- Single Bottom Composer Container -->
    <LinearLayout
        android:id="@+id/inputBottomContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Attachment preview row (hidden until file is picked) -->
        <LinearLayout
            android:id="@+id/attachmentPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bubble_incoming"
            android:padding="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivAttachmentPreview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bubble_incoming"
                android:contentDescription="@string/attachment_preview" />

            <TextView
                android:id="@+id/tvAttachmentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/btnRemoveAttachment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/remove_attachment"
                app:tint="@color/textMuted" />
        </LinearLayout>

        <!-- Composer row: bubble + send button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Rounded bubble container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/messageBubble"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bubbleIncoming">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <!-- Clip icon (attachment) -->
                    <ImageView
                        android:id="@+id/btnClip"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_attach_file"
                        android:contentDescription="@string/attach_files"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/textSecondary" />

                    <!-- Department icon only (no text) -->
                    <ImageView
                        android:id="@+id/btnDepartment"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_department"
                        android:contentDescription="@string/choose_department"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/textSecondary" />

                    <!-- Multiline message input -->
                    <EditText
                        android:id="@+id/etMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/type_suggestion_hint"
                        android:textColorHint="@color/textMuted"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:maxLines="5"
                        android:minLines="1"
                        android:scrollbars="vertical"
                        android:inputType="textMultiLine|textCapSentences"
                        android:imeOptions="actionSend"
                        android:importantForAutofill="no"
                        android:autofillHints=""
                        android:paddingVertical="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Send button aside -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorAccent">

                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_send"
                    android:padding="12dp"
                    android:contentDescription="@string/send_suggestion"
                    android:alpha="0.5"
                    app:tint="@color/textPrimary" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
