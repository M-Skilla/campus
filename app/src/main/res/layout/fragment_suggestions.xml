<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surfaceContainerLowest">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header with Outbox, Inbox, Staff View -->
    <LinearLayout
        android:id="@+id/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_inverseOnSurface"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Outbox button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_outbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/jakarta_semibold"
            android:text="Outbox"
            android:textColor="@color/md_theme_inverseSurface"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_send"
            android:drawableTint="@color/md_theme_inverseSurface"
            android:drawablePadding="6dp"
            android:layout_marginEnd="8dp" />

        <!-- Inbox button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_inbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/jakarta_semibold"
            android:text="Inbox"
            android:textColor="@color/md_theme_inverseSurface"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_mail"
            android:drawableTint="@color/md_theme_inverseSurface"
            android:drawablePadding="6dp"
            android:layout_marginEnd="8dp" />

        <!-- Staff View button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_staff_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/jakarta_semibold"
            android:text="Staff"
            android:textColor="@color/md_theme_inverseSurface"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_admin_panel_settings"
            android:drawableTint="@color/md_theme_inverseSurface"
            android:drawablePadding="6dp" />
    </LinearLayout>

    <!-- Department Cards Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Department"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/jakarta_bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a department to send your message"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:fontFamily="@font/jakarta_regular"
                android:layout_marginBottom="24dp"/>

            <!-- Health Department Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/md_theme_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_health"
                        android:background="@drawable/circle_background"
                        android:padding="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health Department"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_onSurface"
                            android:fontFamily="@font/jakarta_semibold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical services, wellness programs, health concerns"
                            android:textSize="14sp"
                            android:textColor="@color/md_theme_onSurfaceVariant"
                            android:fontFamily="@font/jakarta_regular"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:tint="@color/md_theme_onSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Facilities Department Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_facilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/md_theme_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_facilities"
                        android:background="@drawable/circle_background"
                        android:padding="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Facilities Department"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_onSurface"
                            android:fontFamily="@font/jakarta_semibold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Building maintenance, infrastructure, campus facilities"
                            android:textSize="14sp"
                            android:textColor="@color/md_theme_onSurfaceVariant"
                            android:fontFamily="@font/jakarta_regular"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:tint="@color/md_theme_onSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Library Department Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/md_theme_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_library_books"
                        android:background="@drawable/circle_background"
                        android:padding="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Library Department"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_onSurface"
                            android:fontFamily="@font/jakarta_semibold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Books, research resources, study spaces, library services"
                            android:textSize="14sp"
                            android:textColor="@color/md_theme_onSurfaceVariant"
                            android:fontFamily="@font/jakarta_regular"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward_24"
                        app:tint="@color/md_theme_onSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
