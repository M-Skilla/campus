<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surfaceContainerLowest">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header with Outbox, Inbox, Staff View -->
    <LinearLayout
        android:id="@+id/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_inverseOnSurface"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Outbox button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_outbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/jakarta_semibold"
            android:text="Outbox"
            android:textColor="@color/md_theme_inverseSurface"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_send"
            android:drawableTint="@color/md_theme_inverseSurface"
            android:drawablePadding="6dp"
            android:layout_marginEnd="8dp" />

        <!-- Inbox button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_inbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/jakarta_semibold"
            android:text="Inbox"
            android:textColor="@color/md_theme_inverseSurface"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_mail"
            android:drawableTint="@color/md_theme_inverseSurface"
            android:drawablePadding="6dp"
            android:layout_marginEnd="8dp" />

        <!-- Staff View button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_staff_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/jakarta_semibold"
            android:text="Staff"
            android:textColor="@color/md_theme_inverseSurface"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_admin_panel_settings"
            android:drawableTint="@color/md_theme_inverseSurface"
            android:drawablePadding="6dp" />
    </LinearLayout>

    <!-- Department Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Department"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onSurface"
            android:fontFamily="@font/jakarta_bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a department to send your message"
            android:textSize="14sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:fontFamily="@font/jakarta_regular"
            android:layout_marginBottom="24dp"/>

        <!-- Departments RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_departments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_department" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
